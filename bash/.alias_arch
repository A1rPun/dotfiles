alias s="sudo"
alias pls='sudo $(fc -ln -1)'
alias yy="yay"
alias ya="yay -S"
alias yi="yay -Qte"
alias yu="yay -Qu"
alias yas="yay -Ss"
alias yar="yay -R"
alias archupdate="yay -Syy && yay -Sy archlinux-keyring"
alias archupgrade="yay -Su"
alias archinstalled="yay -Qt"
alias archorphanclean="xargs -ra <(yay -Qdt | awk '{print \$1}') yay -Rcs"
alias updategrub="grub-mkconfig -o /boot/grub/grub.cfg"
alias testmic="arecord -vvv -f dat /dev/null"
alias testscreen="xrandr -q"

### Speedometer
alias wt="speedometer -l -r wlp3s0 -t wlp3s0 -m $(( 1024 * 1024 * 3 / 2 )) -b"
alias nt="speedometer -l -r enp2s0 -t enp2s0 -m $(( 1024 * 1024 * 3 / 2 )) -b"

### Htop
alias ht="htop --sort-key=PERCENT_MEM"

