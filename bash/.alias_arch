GORDON_INSULTS=~/projects/git/_other/Gordon/insults
if [[ -d $GORDON_INSULTS ]]; then
  gordon() {
    if [[ $? != 0 ]]; then
      insult=$(ls $GORDON_INSULTS | shuf -n 1)
      mpv --really-quiet $GORDON_INSULTS/$insult & disown
    fi
  }
  PROMPT_COMMAND="gordon; $PROMPT_COMMAND"
fi
