set completion-ignore-case on
set show-all-if-ambiguous on
set mark-symlinked-directories on
set input-meta on
set output-meta on

# Arrow up?
"\e[B": history-search-forward
# Arrow down?
"\e[A": history-search-backward
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
# Home
"\e[1~": beginning-of-line
# End
"\e[4~": end-of-line
# Delete
"\e[3~": delete-char
# Insert
"\e[2~": quoted-insert
