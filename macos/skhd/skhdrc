# open iTerm
ctrl + alt - t : open -a /Applications/iTerm.app ~
# open Finder
ctrl + alt - e : open ~

# change layout
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - d : yabai -m space --layout float

# focus window
ctrl + alt - up : yabai -m window --focus north
ctrl + alt - right : yabai -m window --focus east
ctrl + alt - down : yabai -m window --focus south
ctrl + alt - left : yabai -m window --focus west

# focus next display/monitor
cmd + ctrl + alt - right : yabai -m display --focus next
cmd + ctrl + alt - left : yabai -m display --focus prev

# toggle floating window
ctrl + alt - h : yabai -m window --toggle float;\
                 yabai -m window --grid 4:4:1:1:2:2

# make floating window fill screen
ctrl + alt - f : yabai -m window --grid 1:1:0:0:1:1

# swap window
shift + ctrl - up : yabai -m window --swap north
shift + ctrl - right : yabai -m window --swap east
shift + ctrl - down : yabai -m window --swap south
shift + ctrl - left : yabai -m window --swap west

# send window to space and follow focus (needs --load-sa)
cmd + alt - 1 : yabai -m window --space  1; yabai -m space --focus 1
cmd + alt - 2 : yabai -m window --space  2; yabai -m space --focus 2
cmd + alt - 3 : yabai -m window --space  3; yabai -m space --focus 3
cmd + alt - 4 : yabai -m window --space  4; yabai -m space --focus 4
cmd + alt - 5 : yabai -m window --space  5; yabai -m space --focus 5
cmd + alt - 6 : yabai -m window --space  6; yabai -m space --focus 6
cmd + alt - 7 : yabai -m window --space  7; yabai -m space --focus 7
cmd + alt - 8 : yabai -m window --space  8; yabai -m space --focus 8
cmd + alt - 9 : yabai -m window --space  9; yabai -m space --focus 9
cmd + alt - 0 : yabai -m window --space 10; yabai -m space --focus 10

# go to space (needs --load-sa)
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9
cmd - 0 : yabai -m space --focus 0
